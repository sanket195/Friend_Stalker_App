<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.btril.friend_stalker.AcceptRequest">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.btril.friend_stalker.AddFriend"
        tools:showIn="@layout/add_friend">

        <TextView
            android:id="@+id/friendMailID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/accptReq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friendMailID"

            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:text="Accept" />

        <Button
            android:id="@+id/rjctReq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accptReq"

            android:backgroundTint="@color/colorAccent"
            android:textColor="@color/white"
            android:layout_marginTop="27dp"
            android:text="Reject" />


    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>